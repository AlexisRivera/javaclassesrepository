#!/usr/bin/make -f

build: clean build-stamp libraries binary post-clean

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

build-stamp:
	touch build-stamp

libraries:
	cp ../../builds/current/libschimpf-util-current.jar debian/input/libschimpf-util.jar

binary:
	dh_testdir
	dh_testroot
	dh_prep
	dh_install
	dh_installchangelogs
	dh_icons
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

post-clean:
	dh_clean
	rm -f build-stamp
	rm -Rf debian/input/*
	chown hschimpf:root ../libschimpf-util_1.3.0_all.deb
	mv ../libschimpf-util_1.3.0_all.deb ../../builds/1.3.0/libschimpf-util_1.3.0_all.deb
	rm -f ../../builds/current/libschimpf-util_current_all.deb
	ln -s "`dirname ../../builds/1.3.0/libschimpf-util_1.3.0_all.deb`"/libschimpf-util_1.3.0_all.deb ../../builds/current/libschimpf-util_current_all.deb